root = (this ? window)

if root.Posts.find().count() == 0
  root.Posts.insert
    title: 'Introducing Telescope',
    author: 'Sacha Greif',
    url: 'http://sachagreif.com/introducing-telescope/'

  root.Posts.insert
    title: 'Meteor',
    author: 'Tom Coleman',
    url: 'http://meteor.com'

  root.Posts.insert
    title: 'The Meteor Book',
    author: 'Tom Coleman',
    url: 'http://themeteorbook.com'

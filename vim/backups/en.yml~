# Sample localization file for English. Add more files in this directory for other locales.
# See https://github.com/svenfuchs/rails-i18n/tree/master/rails%2Flocale for starting points.

en:
  hello: "Hello world"
  activerecord:
    errors:
      models:
        shortcut:
          attributes:
            keyword: 
              already_exists: "'%{value}' already exists"
              invalid_character: "contains an invalid character: '%{value}'"
            long_url:
              too_short: "Long url is too short to be valid ( < 8 characters)"

de:
  hello: "(in de) Hello world"
  activerecord:
    errors:
      models:
        shortcut:
          attributes:
            keyword: 
              already_exists: "(in de) '%{value}' already exists"
              invalid_character: "(in de) contains an invalid character: '%{value}'"
            long_url:
              too_short: "(in de) Long url is too short to be valid ( < 8 characters)"
